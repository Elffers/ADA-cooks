<!DOCTYPE html>
<html>
<head>
  <title>ADACooks</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %> 
  <!-- can add style sheet here just as "sheet" , with actuall .css file stored in app/assets/stylesheets folder, but the default layout is is scarrolds.css.scss-->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= form_tag("/search", method: "get") do %>
    <%= label_tag(:name, "Search by name:") %>
    <%= text_field_tag(:name, params[:name]) %>
    <%= submit_tag("Search") %>
  <% end %>

  <%= form_tag("/search_by_ingredient", method: "get") do %>
    <%= label_tag(:ingredient, "Search by ingredient:") %>
    <%= text_field_tag(:ingredient, params[:ingredient]) %>
    <%= submit_tag("Search") %>
  <% end %>

<%= yield %>

</body>
</html>
